<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="capitales.a14albertoab_proxecto.Centro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/idDivisoria">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/historia"
            android:textColor="#000000"
            android:shadowColor="#8a6603"
            android:layout_gravity="center_vertical|right"/>
    </ScrollView>
    <View
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/idDivisoria"
        android:background="@color/colorPrimaryDark"/>
    <ImageView
        android:layout_below="@+id/idDivisoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/horario"
        android:layout_alignParentBottom="true"
        android:scaleType="center"/>
</RelativeLayout>
